import random
user_count=0
computer_count=0

while True:
 print('enter your choice')
 print('1-rock, 2-paper, 3-scissoor')
 user=int(input())

 computer=random.randint(1,3)
 computer=int(computer)

 print('user=',user)
 print('computer=',computer)



 if user==computer:
     print('game tied')

 elif user==1 and computer==2:
     print('computer input won')
     computer_count+=1
 elif user==1 and computer==3:
     print(' user input won')
     user_count+=1
 elif user==2 and computer==1:
     print('user is won')
     user_count+=1
 elif user==2 and computer==3:
     print('computer is won')
     computer_count+=1

 elif user==3 and computer==1:
      print('computer is won')
      computer_count+=1
 elif user==3 and computer==2:
      print('user is won')
      user_count+=1
 print('winning count')
 print('user='+str(user_count) +'computer=' + str(computer_count))
 print("")

